@model MvcTemplate.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewBag.Title = "Home Page";
}

<div class="row">
    @foreach (var book in Model.Books)
    {
    <div class="col-md-4">
        @book.Content
        <div>@book.Category</div>
    </div>
    }
</div>

<div class="row">
    @foreach (var category in Model.BookCategories)
    {
        <div class="col-md-2">
            @category.Name
        </div>
    }
</div>